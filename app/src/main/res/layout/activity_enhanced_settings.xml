<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="設定"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

        <!-- Text Size Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文字大小"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8sp"
                android:textSize="14sp"
                android:textColor="#666666" />

            <SeekBar
                android:id="@+id/seekbar_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:max="40"
                android:progress="8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48sp"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_text_size_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16sp"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

        <!-- Text Color Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文字顏色"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_color_white"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#FFFFFF"
                android:text="白"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_color_black"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#000000"
                android:text="黑"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_color_red"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#FF0000"
                android:text="紅"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_color_green"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#00FF00"
                android:text="綠"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_color_blue"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#0000FF"
                android:text="藍"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_color_yellow"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#FFFF00"
                android:text="黃"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Background Color Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="背景顏色"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_bg_transparent"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#F0F0F0"
                android:text="透明"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_bg_semi_black"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#80000000"
                android:text="半透明黑"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_bg_semi_white"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="#80FFFFFF"
                android:text="半透明白"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Position Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="顯示位置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radio_group_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radio_top_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="左上角"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radio_top_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中央上方"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/radio_top_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="右上角"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="#000000" />

        </RadioGroup>

        <!-- Screenshot Function Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="截圖功能"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="點擊 OSD 觸發截圖"
                android:textSize="16sp"
                android:textColor="#000000" />

            <Switch
                android:id="@+id/switch_screenshot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_screenshot_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="截圖功能說明"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:background="#F0F0F0"
            android:textColor="#666666" />

        <!-- Preview Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="預覽"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#F0F0F0"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔋 85% | 14:30"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="#80000000"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="套用"
                android:layout_marginEnd="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="重設"
                android:layout_marginStart="8dp"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

